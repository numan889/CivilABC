<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BrickCal">


    <RelativeLayout
        android:id="@+id/rlbanner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:background="@drawable/dialogbackgroundads"
        android:padding="3dp">
    </RelativeLayout>


    <LinearLayout
        android:id="@+id/L1"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rlbanner"
        android:padding="10dp"
        android:gravity="center"
        android:weightSum="1">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Volume "
            android:textStyle="bold"
            android:textSize="18dp"
            android:id="@+id/textView15" />

        <TextView
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:textStyle="bold"
            android:id="@+id/textView_vol" />

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="                    Cement  :   Sand :  Metal"
        android:id="@+id/textView16"
        android:visibility="gone"
        android:layout_below="@+id/L1"
        android:paddingTop="10dp"
        />

    <LinearLayout
        android:id="@+id/L3"
        android:layout_below="@+id/textView16"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:gravity="center">

        <TextView
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:padding="8dp"
            android:textSize="22dp"
            android:textStyle="bold"
            android:textAlignment="textEnd"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/ratio"
            android:id="@+id/textView17" />

        <EditText
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:textAlignment="center"
            android:text="1"
            android:inputType="numberDecimal"
            android:background="@drawable/edittext1"
            android:ems="10"
            android:id="@+id/txt_cr" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:padding="3dp"
            android:textSize="20dp"
            android:text="+" />

        <EditText
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:textAlignment="center"
            android:text="1.50"
            android:inputType="numberDecimal"
            android:background="@drawable/edittext1"
            android:ems="10"
            android:id="@+id/txt_sr" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:padding="3dp"
            android:textSize="20dp"
            android:text="+" />

        <EditText
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:textAlignment="center"
            android:text="3"
            android:background="@drawable/edittext1"
            android:inputType="numberDecimal"
            android:ems="10"
            android:id="@+id/txt_mr" />

    </LinearLayout>
    <LinearLayout
        android:id="@+id/L4"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/L3"
        android:weightSum="1"
        android:layout_gravity="bottom">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="  Cement  "
            android:id="@+id/textView20"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="40dp" />

        <TextView
            android:layout_width="60dp"
            android:layout_height="25dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:id="@+id/view_cement"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:layout_weight="0.56" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/L5"
        android:layout_below="@+id/L4"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="1">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="   Sand    "
            android:id="@+id/textView21"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="40dp" />

        <TextView
            android:layout_width="60dp"
            android:layout_height="25dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:id="@+id/view_sand"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:layout_weight="0.56" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/L6"
        android:layout_below="@+id/L5"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="1">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="   Metal    "
            android:id="@+id/textView22"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="40dp" />

        <TextView
            android:layout_width="60dp"
            android:layout_height="25dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:id="@+id/view_metal"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:layout_weight="0.56" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/L7"
        android:layout_below="@+id/L6"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="1"
        android:padding="15dp"
        android:gravity="right"
        android:focusableInTouchMode="false">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Calculate"
            android:id="@+id/button_calc"
            android:layout_weight="0.10"
            android:textColor="#FBFBFB"
            android:textStyle="bold"
            android:background="@drawable/roundbutton"
            android:layout_marginLeft="70dp" />

    </LinearLayout>

    <TextView
        android:layout_below="@+id/L7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="25dp"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text=" **Brick  All  Cement, Sand and Metal amounts are in units provided for the volume."
        android:id="@+id/textView18"
        android:layout_weight="0.10" />


</RelativeLayout>
