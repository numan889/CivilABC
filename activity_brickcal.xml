            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:textStyle="bold"
            android:id="@+id/textView_vol" />

    </LinearLayout>
    <LinearLayout
        android:id="@+id/L11"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
