<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Home"
    android:gravity="center"
    android:orientation="vertical">

    <TextView
        android:id="@+id/WelcomTxt"
        android:layout_width="300dp"
        android:layout_height="35dp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:layout_centerInParent="true"
        android:layout_alignParentTop="true"
        android:textColor="#121113"
        android:textSize="25dp"
        android:hint="@string/welcomeNot"/>

    <ImageView
        android:id="@+id/ImageView"
        android:layout_width="wrap_content"
        android:layout_height="150dp"
        android:layout_below="@+id/WelcomTxt"
        android:src="@drawable/civilchiplogo"/>



    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerInParent="true"
        android:layout_below="@+id/ImageView"
        android:layout_gravity="center">
    <Button
        android:id="@+id/PdfView"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:layout_marginTop="5dp"
        android:text="@string/condocoment"
        android:background="@drawable/roundbutton"
        android:textColor="#ECECEF"
        tools:ignore="HardcodedText" />
    <Button
        android:id="@+id/BasicCalculationBTN"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:layout_marginTop="5dp"
        android:text="@string/construction_process"
        android:background="@drawable/roundbutton"
        android:textColor="#ECECEF"/>
    <Button
        android:id="@+id/allcalBTN"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:layout_marginTop="5dp"
        android:text="@string/all_calculation"
        android:background="@drawable/roundbutton"
        android:textColor="#ECECEF"/>
    <Button
        android:id="@+id/onResetBtn"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:layout_marginTop="5dp"
        android:text="Coming Soon"
        android:background="@drawable/roundbutton"
        android:textColor="#ECECEF"/>

        <Button
            android:id="@+id/Namaj"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:layout_marginTop="5dp"
            android:text="Namaj shikkha নামাজ শিক্ষা"
            android:background="@drawable/roundbutton"
            android:textColor="#ECECEF"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:padding="8dp"
        android:orientation="horizontal">
        <Button
            android:id="@+id/ShareBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/edittext1"
            android:textColor="#05000B"
            android:text="Share"/>

    </LinearLayout>

</RelativeLayout>
