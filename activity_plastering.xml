<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Plastering">


    <RelativeLayout
        android:id="@+id/rlbanner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:background="@drawable/dialogbackgroundads"
        android:padding="3dp">
    </RelativeLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rlbanner"
        android:padding="3dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="3dp"
            android:gravity="center">



    <LinearLayout
        android:id="@+id/L1"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Area "
            android:textAlignment="center"
            android:textColor="#205E22"
            android:textStyle="bold"
            android:textSize="18dp"
            android:id="@+id/textView15" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:hint="Answer"
            android:textColor="#205E22"
            android:textStyle="bold"
            android:id="@+id/textView_vol" />

    </LinearLayout>
    <LinearLayout
        android:id="@+id/L3"
        android:layout_below="@+id/L1"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:gravity="center">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:textAlignment="center"
                android:layout_marginStart="15dp"
                android:text="Brick surface area"
                android:textStyle="bold"
                android:textSize="18dp"
                android:textColor="#064209"
                android:id="@+id/txt_mr" />

        </LinearLayout>
    <LinearLayout
        android:layout_below="@+id/textView16"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:gravity="center">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="18dp"
                android:textColor="#101010"
                android:text="                                    Cement   :   Sand " />

        </LinearLayout>

        <LinearLayout
            android:layout_below="@+id/Ratiotxt"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:gravity="center">

        <TextView
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:padding="8dp"
            android:textSize="22dp"
            android:textStyle="bold"
            android:textAlignment="textEnd"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/ratio"
            android:id="@+id/textView17" />

        <EditText
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:textAlignment="center"
            android:text="1"
            android:inputType="numberDecimal"
            android:background="@drawable/edittext1"
            android:ems="10"
            android:id="@+id/txt_cr" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:padding="3dp"
            android:textSize="20dp"
            android:text="+" />

        <EditText
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:textAlignment="center"
            android:text="4"
            android:inputType="numberDecimal"
            android:background="@drawable/edittext1"
            android:ems="10"
            android:id="@+id/txt_sr" />
        </LinearLayout>
    </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/L4"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_below="@+id/L3"
        android:layout_gravity="bottom">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="  Cement  =  "
            android:textColor="#100F10"
            android:textSize="18dp"
            android:id="@+id/textView20" />

        <TextView
            android:id="@+id/view_cement"
            android:layout_width="60dp"
            android:layout_height="25dp"
            android:textColor="#100F10"
            android:textSize="18dp"
            android:text="Answer"/>\
        <TextView
            android:id="@+id/CementBags12mm"
            android:layout_width="60dp"
            android:layout_height="25dp"
            android:textColor="#100F10"
            android:textSize="18dp"
            android:text="  .Bags"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/L5"
        android:layout_below="@+id/L4"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="   Sand    =  "
            android:id="@+id/textView21"
            android:textColor="#100F10"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/view_sand"
            android:layout_width="60dp"
            android:layout_height="25dp"
            android:textColor="#100F10"
            android:textSize="18dp"
            android:text="Answer" />
        <TextView
            android:id="@+id/Sand12mm"
            android:layout_width="60dp"
            android:layout_height="25dp"
            android:textColor="#100F10"
            android:textSize="18dp"
            android:text="  .Cft"/>

    </LinearLayout>
            <LinearLayout
                android:id="@+id/RajmesteryBrick"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Raj Mistry Needed = "
                    android:id="@+id/txtRajmiBrick"
                    android:textSize="18dp"
                    android:textColor="#101010" />

                <TextView
                    android:id="@+id/txtRajmisteryBrick"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Ans"
                    android:textColor="#101010"
                    android:textSize="18dp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:textSize="18dp"
                    android:textColor="#101010"
                    android:text="   Nos"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/RajmesteryHelperBrick"
                android:layout_below="@+id/L5"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Raj Mistry Needed = "
                    android:id="@+id/txtRajmiHelperBrick"
                    android:textSize="18dp"
                    android:textColor="#101010"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:id="@+id/txtRajmisteryhelperBrick"
                    android:text="Ans"
                    android:textSize="18dp"
                    android:textColor="#101010"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:textSize="18dp"
                    android:textColor="#101010"
                    android:text="   Nos"/>
            </LinearLayout>

    <LinearLayout
        android:id="@+id/L6"
        android:layout_below="@+id/L5"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:textAlignment="center"
                android:text="Rcc surface area"
              android:layout_marginStart="15dp"
                android:textStyle="bold"
                android:textSize="18dp"
                android:textColor="#064209" />
    </LinearLayout>
        <LinearLayout
            android:id="@+id/RccRatio"
            android:layout_below="@+id/L6"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:gravity="center">

            <TextView
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:padding="8dp"
                android:textSize="22dp"
                android:textStyle="bold"
                android:textAlignment="textEnd"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="@string/ratio"
                android:id="@+id/textView27" />

            <EditText
                android:layout_width="60dp"
                android:layout_height="40dp"
                android:textAlignment="center"
                android:text="1"
                android:inputType="numberDecimal"
                android:background="@drawable/edittext1"
                android:ems="10"
                android:id="@+id/txt_cr6" />
