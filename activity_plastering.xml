                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:padding="3dp"
                android:textSize="20dp"
                android:text="+" />

            <EditText
                android:layout_width="60dp"
                android:layout_height="40dp"
                android:textAlignment="center"
                android:text="3"
                android:inputType="numberDecimal"
                android:background="@drawable/edittext1"
                android:ems="10"
                android:id="@+id/txt_sr6" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/CementRcc"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_below="@+id/RccRatio"
            android:layout_gravity="bottom">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="  Cement  = "
                android:textColor="#100F10"
                android:textSize="18dp"
                android:id="@+id/Cement6" />

            <TextView
                android:id="@+id/view_cement6"
                android:layout_width="60dp"
                android:layout_height="25dp"
                android:textColor="#100F10"
                android:textSize="18dp"
                android:text="Answer"/>
            <TextView
                android:id="@+id/CementBags6mm"
                android:layout_width="60dp"
                android:layout_height="25dp"
                android:textColor="#100F10"
                android:textSize="18dp"
                android:text="  .Bags"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/SandRcc"
            android:layout_below="@+id/CementRcc"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="   Sand    = "
                android:id="@+id/sans6"
                android:textColor="#100F10"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/view_sand6"
                android:layout_width="60dp"
                android:layout_height="25dp"
                android:textColor="#100F10"
                android:textSize="18dp"
                android:text="Answer" />
            <TextView
                android:id="@+id/Sand6mm"
                android:layout_width="60dp"
                android:layout_height="25dp"
                android:textColor="#100F10"
                android:textSize="18dp"
                android:text="  .Cft"/>

        </LinearLayout>
            <LinearLayout
                android:id="@+id/Rajmestery10"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Raj Mistry Needed = "
                    android:id="@+id/txtRajmiRcc"
                    android:textSize="18dp"
                    android:textColor="#101010" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:id="@+id/txtRajmisteryRcc"
                    android:text="Ans"
                    android:textSize="18dp"
                    android:textColor="#101010"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:textSize="18dp"
                    android:textColor="#101010"
                    android:text="   Nos"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/RajmesteryHelper10"
                android:layout_below="@+id/L5"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Raj Mistry Needed = "
                    android:id="@+id/txtRajmiHelper10"
                    android:textSize="18dp"
                    android:textColor="#101010"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:id="@+id/txtRajmisteryhelperRcc"
                    android:text="Ans"
                    android:textSize="18dp"
                    android:textColor="#101010"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:textSize="18dp"
                    android:textColor="#101010"
                    android:text="   Nos"/>
            </LinearLayout>
    <LinearLayout
        android:id="@+id/L7"
        android:layout_below="@+id/SandRcc"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="1"
        android:padding="15dp"
        android:gravity="right"
        android:focusableInTouchMode="false">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Calculate"
            android:id="@+id/button_calc"
            android:layout_weight="0.10"
            android:textColor="#FBFBFB"
            android:textStyle="bold"
            android:background="@drawable/roundbutton"
            android:layout_marginLeft="70dp" />

    </LinearLayout>

    <TextView
        android:layout_below="@+id/L7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="25dp"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text=" **Concrete  All  Cement, Sand and Metal amounts are in units provided for the Area."
        android:id="@+id/textView18"
        android:layout_weight="0.10" />

    </LinearLayout>
    </RelativeLayout>
    </ScrollView>

</RelativeLayout>