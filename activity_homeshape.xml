<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:ads="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Homeshape"
    android:gravity="center"
    android:orientation="vertical"
    android:weightSum="1">

    <RelativeLayout
        android:id="@+id/rlbanner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:background="@drawable/dialogbackgroundads"
        android:padding="3dp">
    </RelativeLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="150dp"
        android:layout_centerInParent="true"
        android:layout_below="@+id/rlbanner"
        android:id="@+id/image_common"
        android:src="@drawable/houseshape2" />
    <TextView
        android:id="@+id/txt_unit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_below="@+id/image_common"
        android:layout_marginTop="5dp"
        android:text="@string/unit_your_choice"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#BA0F23" />
    <LinearLayout
        android:id="@+id/LinerM"
        android:layout_below="@+id/txt_unit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/etxtlenth"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:layout_marginTop="5dp"
            android:text="@string/lenth"
            android:inputType="numberDecimal"
            android:padding="8dp"
            android:textAlignment="center"
            android:textColor="#090909"
            android:textSize="18dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtwidth"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:layout_marginTop="5dp"
            android:text="@string/width"
            android:padding="8dp"
            android:textAlignment="center"
            android:textColor="#090909"
            android:textSize="18dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtthickness"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:layout_marginTop="5dp"
            android:text="Hight"
            android:padding="8dp"
            android:textAlignment="center"
            android:textColor="#090909"
            android:textSize="18dp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/textView12"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:layout_marginTop="5dp"
            android:text="@string/thickness"
            android:padding="8dp"
            android:textAlignment="center"
            android:textColor="#090909"
            android:textSize="18dp"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/L2"
        android:layout_below="@+id/LinerM"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">


        <EditText
            android:id="@+id/editText_mch"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:layout_marginRight="9dp"
            android:background="@drawable/edittext1"
            android:hint="m"
            android:inputType="number"
            android:textAlignment="center" />

        <EditText
            android:id="@+id/editText_hch"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:layout_marginRight="9dp"
            android:hint="n"
            android:textAlignment="center"
            android:background="@drawable/edittext1"
            android:inputType="number" />
        <EditText
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:layout_marginRight="9dp"
            android:hint="h"
            android:textAlignment="center"
            android:background="@drawable/edittext1"
            android:id="@+id/editText_nch"
            android:inputType="number" />
        <EditText
            android:id="@+id/editText_tch"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:hint="Thickness"
            android:textAlignment="center"
            android:background="@drawable/edittext1"
            android:inputType="number" />

    </LinearLayout>





    <LinearLayout
        android:id="@+id/L3"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_below="@+id/L2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Area = "
            android:padding="8dp"
            android:id="@+id/textView10" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:id="@+id/textView_areah" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/L4"
        android:orientation="horizontal"
        android:layout_below="@+id/L3"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Volume"
            android:padding="8dp"
            android:id="@+id/textView11" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:id="@+id/textView_volumeh" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/L4"
        android:gravity="center"
        android:paddingLeft="25dp"
        android:weightSum="1">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="    Area    "
            android:id="@+id/button_areac"
            android:background="@drawable/roundbutton"
            android:padding="2dp"
            android:layout_marginRight="3dp"
            android:textColor="#FBFDFD" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Volume"
            android:id="@+id/button_volumec"
            android:background="@drawable/roundbutton"
            android:padding="2dp"
            android:layout_marginRight="3dp"
            android:textColor="#FBFDFD"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Next"
            android:id="@+id/button_nextc"
            android:background="@drawable/roundbutton"
            android:padding="2dp"
            android:layout_marginRight="3dp"
            android:textColor="#FBFDFD"/>
    </LinearLayout>


</RelativeLayout>

